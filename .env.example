DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5432/bball

NEXT_PUBLIC_USE_MOCK_AUTH=false
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_key_here
NEXT_PUBLIC_CLERK_JS_URL=https://cdn.jsdelivr.net/npm/@clerk/clerk-js@latest/dist/clerk.browser.js
CLERK_SECRET_KEY=sk_test_your_clerk_secret_here
#NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_live_key_here
#CLERK_SECRET_KEY=sk_live_your_live_secret_here

# SMTP Configuration (MailerSend or any SMTP provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=Your App Name

# Alternative: Use MailerSend API Key (if preferred over SMTP)
# MAILERSEND_API_KEY=your_api_key_here

# App URL for invitation links
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AWS S3 Database Backup Configuration
# Required for automated database backups to S3
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
BACKUP_BUCKET=bball-db-backups
BACKUP_PREFIX=backups

# Hasura GraphQL Engine Configuration
# Required for real-time game state synchronization
NEXT_PUBLIC_HASURA_URL=http://localhost:8080/v1/graphql
HASURA_ADMIN_SECRET=myadminsecretkey

# Hasura JWT Secret — baked into docker-compose.yml (dev) and docker-compose.prod.yml (prod).
# Format: {"type":"RS256","jwk_url":"<YOUR_CLERK_JWKS_URL>"}
# Dev JWKS:  https://<your-clerk-dev-domain>/.well-known/jwks.json
# Prod JWKS: https://<your-clerk-prod-domain>/.well-known/jwks.json
# DO NOT set NEXT_PUBLIC_HASURA_ADMIN_SECRET — the admin secret must never be exposed to the browser.

